@model Felandil.CleanArchitecture.Web.Models.BasketModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Clean Architecture</h1>
    <p><a href="https://8thlight.com/blog/uncle-bob/2012/08/13/the-clean-architecture.html" class="btn btn-primary btn-large">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-3">
                <label>Current Basket Email:</label> <br />
                <label>Current Basket Article Count:</label><br />
                <label>Current Basket Price:</label>
            </div>
            <div class="col-md-3">
                <b><label id="basket-email">@Model.Email</label></b> <br />
                <b><label id="basket-articlecount">@Model.ArticleCount</label></b><br />
                <b><label id="basket-value">@Model.BasketValue</label></b>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="form-group">
                        <label for="art-quantity">
                            Quantity
                        </label>
                        <input type="text" id="art-quantity" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="art-price">
                            Price
                        </label>
                        <input type="text" id="art-price" class="form-control"/>
                    </div>
                    <a id="btnAddArticle" class="btn btn-default">Save Article</a>
                </div>
            </div>
        </div>        
    </div>
</div>